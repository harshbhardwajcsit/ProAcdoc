<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fafafa"
    android:id="@+id/LayoutView"
    android:layout_height="match_parent"
    tools:context="com.medical.proadoc.fragments.HomeFragment"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.28"
        android:gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:src="@drawable/homemainbanner"
            android:scaleType="fitXY" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.72" >

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:clickable="true"

                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:id="@+id/lvmedicalWallet">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"


                    android:background="?android:attr/selectableItemBackground"
                    android:layout_margin="5dp"
                    android:elevation="10dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:stateListAnimator="@anim/lift_on_touch"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"

                    >

                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/homebgone" />

                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center"
                            android:background="#F29C28AF">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageView"
                                    android:src="@drawable/homewallet" />

                                <com.medical.proadoc.CustomControls.CustomLatoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Medical Wallet"
                                    android:textColor="@android:color/white"
                                    android:layout_marginTop="5dp" />
                            </LinearLayout>

                        </RelativeLayout>


                    </RelativeLayout>



                </android.support.v7.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50" >

                <android.support.v7.widget.CardView
                    android:id="@+id/card_viewAddMember"
                    android:layout_gravity="center"
                    android:layout_width="fill_parent"
                    android:layout_height="200dp"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:stateListAnimator="@anim/lift_on_touch"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="5dp"
                    android:elevation="12dp"
                    android:background="#ffffff">


                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:gravity="center">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"

                                android:src="@drawable/homebgtwo" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#F2FE5722">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/imageView5"
                                        android:src="@drawable/homefamily" />

                                    <com.medical.proadoc.CustomControls.CustomLatoRegularTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:text="My Family"

                                        android:textColor="@android:color/white"
                                        android:layout_centerInParent="true" />
                                </LinearLayout>

                            </RelativeLayout>

                        </RelativeLayout>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.50">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50" >  <android.support.v7.widget.CardView
                android:id="@+id/card_viewSearch"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@anim/lift_on_touch"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:layout_marginBottom="5dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:gravity="center"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:src="@drawable/homebgthree" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F14BAF4F">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageView10"
                                    android:layout_gravity="center_horizontal"
                                    android:src="@drawable/homesearch" />

                                <com.medical.proadoc.CustomControls.CustomLatoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Search Nearby"

                                    android:textColor="@android:color/white"
                                    android:layout_centerInParent="true" />
                            </LinearLayout>

                        </RelativeLayout>

                    </RelativeLayout>

                </LinearLayout>


            </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:layout_marginBottom="5dp">
                <android.support.v7.widget.CardView
                android:id="@+id/card_viewVaccination"
                android:layout_gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:stateListAnimator="@anim/lift_on_touch"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="true"
                android:layout_margin="5dp"
                android:elevation="10dp"
                android:background="#ffffff">


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/imageView3"
                            android:src="@drawable/homebgfour" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#F1F8BC06">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/imageView11"
                                    android:src="@drawable/homevacciantion" />

                                <com.medical.proadoc.CustomControls.CustomLatoRegularTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:text="Child Vaccinations"

                                    android:textColor="@android:color/white"
                                    android:layout_centerInParent="true" />
                            </LinearLayout>

                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
