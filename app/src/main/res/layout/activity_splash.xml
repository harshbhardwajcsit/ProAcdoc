<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.medical.proadoc.Splash"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.90"
        android:layout_gravity="center"> <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"


        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_gravity="center" /></LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10" >
        <com.medical.proadoc.CustomControls.SimpleViewPagerIndicator
            android:id="@+id/page_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true" />


        <Button
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/tendp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Skip And Login"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/button"
            android:onClick="skip_click" />
    </RelativeLayout>
</LinearLayout>
